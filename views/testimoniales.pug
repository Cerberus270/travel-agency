extends ./layout/index

block contenido
    main.container.mt-5
        h1.text-center.mt-5 #{pagina}

        include ./layout/bloque_testimoniales

        .row.testimoniales

            .col-md-12
                h2.d-block.w-100.text-center Agrega un Testimonial

                if(errores)
                    each error in errores
                        .alert.col.alert-danger.text-center.alert-dismissible.fade.show(role='alert')=error.mensaje
                            button.close(type='button' data-dismiss='alert' aria-label='Close' value='X')
                                span(aria-hidden='true') &times;
            .row.justify-content-center.col
                .col-md-8
                    form(action="/testimoniales", method="POST")
                        .form-group
                            label(for="nombre") Nombre
                            input#nombre(type="text", placeholder="Tu Nombre", name="nombre", class="form-control", value= nombre)
                        .form-group
                            label(for="correo") Correo Electronico
                            input#correo(type="email", placeholder="Tu Correo", name="correo", class="form-control", value= correo)
                        .form-group
                            label(for="mensaje") Correo Electronico
                            textarea#mensaje(name="mensaje", cols="30", rows="10", placeholder="Tu Mensaje", class="form-control")= mensaje

                        input.btn.btn-success.btn-block(type="submit", value="Enviar")